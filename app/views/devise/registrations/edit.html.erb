<div class = "base-container mw-sm">
      <div class = "row">
        <div class = "mx-auto pt-5" style="width: 550px;">
          <h3 class = "text-center"><%= t('アカウント編集', resource: resource_name.to_s.humanize) %></h1>
        </div>
      </div>

    <div class = "row">
    <div class = "mx-auto" style="width: 550px;">  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

        <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

        <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
      </div>

      <div class="form-group mb-4">
        <%= f.submit t('.update'), class: 'btn btn-primary btn-block' %>
      </div>
      <hr>
      <div class = "mt-4">
      <%= link_to root_path do %>
        <button type="button" class="btn btn-success mt-3 btn-block" >トップページ</button>
      <% end %>
      </div>
    <% end %>
    </div>
    </div>
</div>